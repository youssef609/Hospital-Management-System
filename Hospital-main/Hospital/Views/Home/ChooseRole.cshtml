
@{
    ViewData["Title"] = "ChooseRole";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link href="~/css/layoutstylesheet.css" rel="stylesheet" />
<!-- Container for centering -->
<div class="fullscreen-container">
    <div>
        <h1>Login As:</h1>
        <div class="role-selection">
            <a asp-action="Login" asp-controller="Account" asp-route-role="Admin" class="btn" style="background-color: #ffffff; color: #0474cc;">Admin</a>
            <a asp-action="Login" asp-controller="Account" asp-route-role="Patient" class="btn" style="background-color: #ffffff; color: #0474cc;">Patient</a>
            <a asp-action="Login" asp-controller="Account" asp-route-role="Doctor" class="btn" style="background-color: #ffffff; color: #0474cc;">Doctor</a>
        </div>
    </div>
</div>

<style>
    /* Fullscreen container for centering content */
    .fullscreen-container {
        display: flex;
        flex-direction: column; /* Stack items vertically */
        justify-content: flex-start; /* Center items vertically */
        margin-top:250px;
        align-items: center; /* Center horizontally */
        height: 100vh; /* Full viewport height */
    }

    .role-selection {
        display: flex;
        gap: 20px; /* Space between buttons */
        justify-content: center; /* Center buttons horizontally */
        margin-top: 20px; /* Space above the button group */
        margin-top: var(--button-group-margin-top, 50px); /* Adjust this variable for vertical position */
    }

    .btn {
        padding: 10px 20px; /* Padding for button */
        font-size: 18px; /* Font size for button */
    }
</style>

@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />
}
