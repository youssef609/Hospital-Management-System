@model Hospital.Models.Appointment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";


}

<style>
    .form-title {
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
        color: black;
    }

    .alert {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

