@model IEnumerable<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments for Doctor";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}


<style>
    table {
        background-color: white;
        width: 100%
    }

    .table-rounded {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-rounded th:first-child {
            border-top-left-radius: 10px;
        }

        .table-rounded th:last-child {
            border-top-right-radius: 10px;
        }

    .custom-row th {
        text-align: left; /* Center text in header */
        background-color: #cae0f1;
        color: black;
        font-family: Arial, Helvetica, sans-serif
    }

    /*     #bbd7ec
                #cae0f1
             */

    td {
        text-align: left;
    }

    .container {
        max-width: 92%
    }

</style>

@if (Model.Count() > 0)
{
     <div class="container mt-5 ">
        <h3 class="text-center mb-4">Your Upcoming Appointments </h3>
        <div class="card-body">
            <table class="table table-striped table-hover table-rounded">
                <thead class="custom-row">
                    <tr>
                        <th>Patient</th>
                        <th>Specialization</th>
                        <th>Date</th>
                        <th>Details</th>
                        <th>Edit</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Patient?.FirstName @appointment.Patient?.LastName</td>
                            <td>@appointment.Specialization</td>
                            <td>@appointment.Date.ToString("yyyy-MM-dd")</td>

                            <td><a asp-action="Details" asp-route-id="@appointment.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                            <td><a asp-action="Edit" asp-route-id="@appointment.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
     </div>
   
   
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>No Appointments</h3>
    </div>
}



