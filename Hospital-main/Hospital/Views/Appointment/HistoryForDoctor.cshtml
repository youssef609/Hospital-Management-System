@model IEnumerable<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "Appointment History for Doctor";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}
<link href="~/css/tablestylesheet.css" rel="stylesheet" />


@if (Model.Any())
{
    <div class="container mt-5">
        <h3 class="text-center mb-4">Appointment History for Dr. @ViewData["DoctorName"]</h3>
        <div class="card-body">
            <table class="table table-striped table-hover table-rounded">
                <thead class="custom-row">
                    <tr>
                        <th>Patient</th>
                        <th>Specialization</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Patient?.FirstName @appointment.Patient?.LastName</td>
                            <td>@appointment.Specialization</td>
                            <td>@appointment.Date.ToString("g")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@appointment.Id">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>Your appointments history is empty</h3>
    </div>
}

