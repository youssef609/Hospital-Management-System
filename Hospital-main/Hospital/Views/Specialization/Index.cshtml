@model IEnumerable<Hospital.Models.Specialization>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}


<style>
    .table {
        background-color: white;
        width: 70%;
        /* margin: 0 auto; */
    }

    .table-rounded {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-rounded th:first-child {
            border-top-left-radius: 10px;
        }

        .table-rounded th:last-child {
            border-top-right-radius: 10px;
        }

    .custom-row th {
        text-align: left; 
        background-color: #cae0f1;
        color: black;
        font-weight: bold;
        /* font-family: Arial, Helvetica, sans-serif */
    }

    /*     #bbd7ec
            #cae0f1
         */

    td {
        text-align: left;
    }

    .container {
        max-width: 92%;
        
    }

/*     .pos{
        text-align: left;
        margin-bottom: 20px;
    } */



</style>

@{
    if (Model.Count() > 0)
    {
        <div class="container mt-5 ">
            <div class="pos">
                <h3>Specializations</h3>
                <br />
                <p><a asp-action="Create" class="btn" style="background-color:#0474cc; color:white">Add New Specialization</a> </p>
            </div>
            
            <br />
            <div class="card-body pos2">

                <table class="table table-striped table-hover table-rounded">
                    <thead class="custom-row">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>Detials</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td> <a asp-action="Details" asp-route-id="@item.Id" class="text-info"><i class="fas fa-eye"></i></a> </td>
                                <td><a asp-action="Edit" asp-route-id="@item.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                                <td><a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>No Specializations</h3>
        </div>
    }
}



