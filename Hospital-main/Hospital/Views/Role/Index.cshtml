@using Hospital.ViewModels

@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}
<style>
    table {
        background-color: white;
        width: 100%
    }

    .table-rounded {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-rounded th:first-child {
            border-top-left-radius: 10px;
        }

        .table-rounded th:last-child {
            border-top-right-radius: 10px;
        }

    .custom-row th {
        text-align: left; /* Center text in header */
        background-color: #cae0f1;
        color: black;
        font-weight: bold;

    }



    td {
        text-align: left;
    }

    .container {
        max-width: 92%
    }

</style>


@{
    if (Model.Count() > 0)
    {
        
        <div class="container mt-5 ">
            <h3>Roles</h3>
            <br />
            <p><a asp-action="Create" class="btn" style="background-color:#0474cc; color:white">Create Role</a> </p>
            <br/>
            <div class="card-body">

                <table class="table table-striped table-hover table-rounded">

                    <thead class="custom-row">
                        <tr>
                            <th>Id</th>
                            <th>Role Name</th>
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var Role in Model)
                        {
                            <tr>
                                <td>@Role.Id</td>
                                <td>@Role.RoleName</td>

                                <td><a asp-action="Details" asp-route-id="@Role.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                                <td><a asp-action="Edit" asp-route-id="@Role.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                                <td><a asp-action="Delete" asp-route-id="@Role.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>


    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>No Roles</h3>
        </div>
    }
}

