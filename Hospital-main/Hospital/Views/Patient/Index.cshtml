@model IEnumerable<Patient>
@{

    ViewData["Title"] = "All Patients";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}


<style>
    table {
        background-color: white;
        width: 100%
    }

    .table-rounded {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-rounded th:first-child {
            border-top-left-radius: 10px;
        }

        .table-rounded th:last-child {
            border-top-right-radius: 10px;
        }

    .custom-row th {
        text-align: left; /* Center text in header */
        background-color: #cae0f1;
        color: black;
        /* font-family: Arial, Helvetica, sans-serif  */
        font-weight:bold;
    }

    /*     #bbd7ec
            #cae0f1
         */

    td {
        text-align: left;
    }

    .container {
        max-width: 92%
    }

</style>

@{
    if (Model.Count() > 0)
    {
       <div class="container mt-5 ">
            <h3>Patients</h3>
            <br/>

            <div class="card-body">
                <table class="table table-striped table-hover table-rounded">

                    <thead class="custom-row">
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Details</th>
                            

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.Id</td>
                                <td>@patient.FirstName</td>
                                <td>@patient.LastName</td>
                                <td>@patient.Email</td>
                                <td>@patient.PhoneNumber</td>
                                <td>@patient.Age</td>
                                <td>@patient.Gender</td>
                                <td><a asp-action="Details" asp-route-id="@patient.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                                
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
       </div>
        
        
    }
    else
    {
        <div class="mt-5 alert alert-warning"> <h3>No Patients</h3>
        </div>
    }
}
@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />
}
