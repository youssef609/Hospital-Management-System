@model Hospital.Models.Doctor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin&DoctorLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MediCare</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/home.css">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutStyleSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>






    <!-- Main Body Section -->

    <div class="container mt-5">
        <div class="row align-items-center">
            <div class="col-md-6 text-section">
                <h6 class="text-uppercase text-primary mb-2">Your personalized dashboard is now ready.</h6>
                <h1 class="display-4 font-weight-bold">Welcome Doctor @Model.FirstName @Model.LastName!</h1>
                <p class="mt-4 mb-4 text-muted">You now have access to cutting-edge aesthetic tools and resources designed to support your expertise. We’re committed to helping you deliver the highest level of care to your patients with our advanced treatments.</p>
               
            </div>
            @{
                string imageSrc = Model.Image == null ? "/images/Doctor.png" : $"data:image/jpeg;base64,{Convert.ToBase64String(Model.Image)}";
            }
            <div class="col-md-6">
                <img src=@imageSrc alt="Maxwell Admin">
            </div>
        </div>
        @* </div> *@
    </div>


</body>
</html>